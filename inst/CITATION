citHeader("To cite UrbanTempo in publications, use:")

citEntry(entry = "Manual",
  title        = paste("UrbanTempo:", packageDescription("UrbanTempo")$Title),
  author       = personList(as.person("Timothée Flutre"), as.person("Marie Flutre")),
  year         = "2019",
  note         = paste("R package version", packageVersion("UrbanTempo")),
  url          = packageDescription("UrbanTempo")$URL,

  textVersion  =
    paste("Timothée Flutre and Marie Flutre (2019).",
          "UrbanTempo:", packageDescription("UrbanTempo")$Title, ".",
          "R package version", packageVersion("UrbanTempo"), ".",
          packageDescription("UrbanTempo")$URL)
)
